rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function roleValue(userId) {
      return exists(/databases/$(database)/documents/users/$(userId))
          ? get(/databases/$(database)/documents/users/$(userId)).data.role
          : 'admin';
    }

    function isAdminRole(userId) {
      return roleValue(userId) == 'admin' || roleValue(userId) == 'owner';
    }

    function isStaffOrAdmin(userId) {
      return isAdminRole(userId) || roleValue(userId) == 'staff';
    }

    match /users/{userId} {
      allow read, create, update: if isOwner(userId);
      allow delete: if false;

      match /activityLogs/{logId} {
        allow read, create: if isOwner(userId);
        allow update, delete: if isOwner(userId) && isAdminRole(userId);
      }

      match /clients/{clientId} {
        allow read, write: if isOwner(userId);
      }

      match /products/{productId} {
        allow read, write: if isOwner(userId);
      }

      match /invoices/{invoiceId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId) && isStaffOrAdmin(userId);
        allow delete: if isOwner(userId) && isAdminRole(userId);
      }

      match /reminders/{reminderId} {
        allow read, write: if isOwner(userId);
      }

      match /companies/{companyId} {
        allow read, create, update, delete: if isOwner(userId);

        match /clients/{clientId} {
          allow read, write: if isOwner(userId);
        }

        match /products/{productId} {
          allow read, write: if isOwner(userId);
        }

        match /reminders/{reminderId} {
          allow read, write: if isOwner(userId);
        }

        match /recurringInvoices/{recurringId} {
          allow read, write: if isOwner(userId);
        }

        match /analytics/{analyticsId} {
          allow read, write: if isOwner(userId);
        }

        match /invoices/{invoiceId} {
          allow read: if isOwner(userId);
          allow create, update: if isOwner(userId) && isStaffOrAdmin(userId);
          allow delete: if isOwner(userId) && isAdminRole(userId);
        }
      }
    }
  }
}
